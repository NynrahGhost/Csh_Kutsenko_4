<UserControl x:Class="Csh_Kutsenko_01.Views.UserControls.AllPersonsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Csh_Kutsenko_01.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="TheGrid" Grid.Row="0" Grid.Column="1" Margin="10" Grid.RowSpan="3" Grid.ColumnSpan="2" IsReadOnly="True"
                  ItemsSource="{Binding List, Mode = OneWay, UpdateSourceTrigger=PropertyChanged}" 
                  SelectedItem="{Binding Path=Selection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <DataGrid.Columns>
                
            </DataGrid.Columns>
        </DataGrid>
        
        <Button Grid.Row="0" Grid.Column="0" Margin="10" Grid.ColumnSpan="1" Content="Add" FontSize="34" Command="{Binding AddCommand}" />
        <Button Grid.Row="1" Grid.Column="0" Margin="10" Grid.ColumnSpan="1" Content="Remove" FontSize="34" Command="{Binding RemoveCommand}" />
        <Button Grid.Row="2" Grid.Column="0" Margin="10" Grid.ColumnSpan="1" Content="Edit" FontSize="34" Command="{Binding EditCommand}" />
        <Button Grid.Row="3" Grid.Column="0" Margin="10" Grid.ColumnSpan="3" Content="Save" FontSize="34" Command="{Binding SaveCommand}" />
    </Grid>
</UserControl>
